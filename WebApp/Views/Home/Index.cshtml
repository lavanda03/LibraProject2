
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/Content/Style.css">
</head>
<body>
    <div class="dashboard">


    
            
               <div class="box red">
                    <h3></h3>
                    <p>New Issues</p>
                    <a href="#">View Details</a>
                </div>
            

              <div class="box orange">
                    <h3></h3>
                    <p>Pending Issues</p>
                    <a href="#">View Details</a>
                </div>
            

           
                <div class="box blue">
                    <h3>0</h3>
                    <p>Assigned Issues</p>
                    <a href="#">View Details</a>
                </div>
            

           
                <div class="box green">
                    <h3>1</h3>
                    <p>In Progress Issues</p>
                    <a href="#">View Details</a>
                </div>
            
        
    </div>
</body>
</html>



<table id="issueTable" class="display">
    <thead>
        <tr>
            <th>Issue</th>
            <th> Pos.Id</th>
            <th> Pos.Name</th>
            <th> Created By</th>
            <th> Date</th>
            <th> Issue Type</th>
            <th> Status</th>
            <th> Assigned To</th>
            <th> Memo</th>

        </tr>
    </thead>
</table>



@section scripts
{
    <script>
        $(document).ready(function () {

            let columns = [
                { "data": "Id", "name": "Issue", "autoWidth": true },
                { "data": "IdPos", "name": " Pos.Id", "autoWidth": true },
                { "data": "PosName", "name": " Pos.Name", "autoWidth": true },
                { "data": "UserName", "name": "Created By", "autoWidth": true },
                { "data": "CreationDate", "name": "Date", "autoWidth": true },
                { "data": "IssueType", "name": "Issue Type", "autoWidth": true },
                { "data": "Status", "name": "Status", "autoWidth": true },
                { "data": "UserType", "name": "Assigned To", "autoWidth": true },
                { "data": "Memo", "name": "Memo", "autoWidth": true },

            ];


            bindDataTable("#issueTable", "/issue/QueryIssue", columns)


            
           ;

          



        });
    </script>
}
